<h3>Showing <span id="quip_count"><%= pluralize @quips.size, 'quip' %></span> from <span><%= identify_user(@user) %> timeline.</span></h3>

<div id="badges">
  <%= link_to_remote 'jQuery Badge', :url => badge_info_url('jquery', :format => 'js', :badge_url => @badge_url), :method => 'get' %>
  <%= link_to_remote 'Prototype Badge', :url => badge_info_url('prototype', :format => 'js', :badge_url => @badge_url), :method => 'get' %>
</div>

<ol id="quips">
  <%= render :partial => 'quips' %>
</ol>

<% content_for :javascript do %>
  <%= javascript_tag "var ep = new EndlessPage(#{@quips.total_pages}, $('quips'), '#{quips_path(:format => :js, :q => params[:q])}', '#{form_authenticity_token}');" %>
<% end %>
